
{
    // Controls if quick suggestions should show up while typing
    "editor.quickSuggestions": {
        "other": true,
        "comments": true,
        "strings": true
    },

    // Sending info about VSCode usage to Microsoft.
    "telemetry.telemetryLevel": "off",

    // Highlighting of errors.
    "C_Cpp.errorSquiggles": "enabledIfIncludesResolve",
    // Auto-formating of code.
    "C_Cpp.formatting": "enabled",
    // Memory limit for c/c++ code analyzer.
    "C_Cpp.intelliSenseMemoryLimit": 256,
    "C_Cpp.intelliSenseCacheSize": 256,
    // Insert templates of repeatedly written code.
    "C_Cpp.suggestSnippets": false,

    // Ask confirmation deletion of file.
    "explorer.confirmDelete": true,
    // Ask confirmation when moving file.
    "explorer.confirmDragAndDrop": true,

    // Automatically insert empty line in the end of file.
    "files.insertFinalNewline": false,
    // Remove whitespaces in the end of the line.
    "files.trimTrailingWhitespace": true,
    // Autosave files.
    "files.autoSave": "onFocusChange",

    // Use line as cursor in VSCode terminal.
    "terminal.integrated.cursorStyle": "line",

    // Suggest function and variable names as you type.
    "editor.quickSuggestions": {
        "comments": "on",
        "strings": "on",
        "other": "on"
    },
    "editor.fontSize": 17,
    "editor.autoClosingBrackets": "never",
    "editor.autoClosingDelete": "auto",
    "editor.autoClosingOvertype": "auto",
    "editor.autoClosingQuotes": "languageDefined",
    "editor.autoIndent": "keep",
    "editor.autoSurround": "languageDefined",
    // Amount of lines remaining between cursor and top/bottom of editor.
    "editor.cursorSurroundingLines": 7,
    // Colorization of brackets.
    "editor.bracketPairColorization.enabled": false,
    // Show 'inlined' editor to peek in other file.
    "editor.codeLens": true,
    "editor.gotoLocation.multipleDefinitions": "goto",
    "editor.gotoLocation.multipleDeclarations": "goto",
    "editor.gotoLocation.multipleImplementations": "goto",
    "editor.gotoLocation.multipleReferences": "goto",
    "editor.gotoLocation.multipleTypeDefinitions": "goto",
    // Recognize links in editor.
    "editor.links": true,
    // Show hints for function parameters.
    "editor.parameterHints.enabled": true,
    // Show hints on hover.
    "editor.hover.enabled": false,
    "editor.inlayHints.enabled": "off",
    "editor.lightbulb.enabled": true,
    "editor.acceptSuggestionOnCommitCharacter": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.inlineSuggest.enabled": true,
    "editor.snippetSuggestions": "top",
    "editor.comments.ignoreEmptyLines": false,
    "editor.glyphMargin": false,

    "phpParameterHint.enabled": true,

    "diffEditor.ignoreTrimWhitespace": false,

    "workbench.enableExperiments": false,
    "workbench.startupEditor": "none",
    "workbench.preferredDarkColorTheme": "Visual Studio 2017 Dark - C++",
    "workbench.preferredLightColorTheme": "Visual Studio Light",
    //"workbench.colorTheme": "GitHub Dark",
    //"workbench.colorTheme": "Dracula",
    //"workbench.colorTheme": "One Dark Theme",
    "workbench.colorTheme": "Visual Studio 2017 Light - C++",
    //"workbench.colorTheme": "Visual Studio 2017 Dark - C++",
    //"workbench.colorTheme": "Monokai Night",
    //"workbench.colorTheme": "Viow Darker",
    //"workbench.colorTheme": "Allure (rainglow)",
    "workbench.editor.enablePreview": false,

    "security.workspace.trust.banner": "never",
    "security.workspace.trust.enabled": false,
    "security.workspace.trust.untrustedFiles": "open",
    "security.workspace.trust.startupPrompt": "never",

    // Show path to file in status bar.
    "breadcrumbs.enabled": true,

    "task.allowAutomaticTasks": "off",
    "task.autoDetect": "off",

    "problems.autoReveal": false,
    "problems.decorations.enabled": false,

    "window.zoomLevel": -1,
